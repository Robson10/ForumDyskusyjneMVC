@model IEnumerable<ForumMVC.Models.MessageItem>
@{
    ViewBag.Title = "SelectedTopic";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}

<h2>
    @if (Session["Temat"] != null)
{<text> @Session["Temat"].ToString() </text>}
</h2>

<table class="table">
    <tr>
        <th style="width:250px"></th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {

        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Uzytkownik)
                <br />
                @Html.DisplayFor(modelItem => item.data)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tresc)
            </td>
        </tr>
    }
</table>
<p>
    @Html.ActionLink("Dodaj komentarz", "CreateMessage", "User")
</p>

